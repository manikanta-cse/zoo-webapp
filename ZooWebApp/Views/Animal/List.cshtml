
@{
    ViewBag.Title = "Animals";
    Layout = null;
}


<div>

    <div class="container">
        <div class="page-header">
            <h1>Animals</h1>
        </div>
        <div class="row">
            <div class="col-md-4">
                <a href="#/create" class="btn btn btn-success"><span class="glyphicon glyphicon-plus"></span> Create Animal</a>
            </div>
        </div>
       <br />
        <table class="table table-hover table-striped.table-condensed">
            <thead>
                <tr>
                    <th>Animal Name</th>
                    <th>Species</th>
                    <th>Year of Birth</th>
                    <th>Age</th>
                    <th>Added Date Time</th>
                    <th>Modifed Date Time</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            <tr ng-repeat="animal in animals.Animals">
                <td ng-bind="animal.AnimalName"></td>
                <td ng-bind="animal.SpeciesName"></td>
                <td ng-bind="animal.YearOfBirth"></td>
                <td ng-bind="animal.Age"></td>
                <td ng-bind="animal.AddedDateTime | date:'medium'"></td>
                <td ng-bind="animal.ModifiedDateTime | date:'medium'"></td>
                <td><a href="#/edit/{{animal.AnimalId}}" ng-click="getAnimal(animal.AnimalId)" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="#" ng-click="remove(animal.AnimalId)" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a></td>
            </tr>
            </tbody>
            <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td class="text-right"><strong>Average Age :</strong></td>
                <td  ng-bind="animals.AverageAge"></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            </tfoot>
        </table>
    </div>

</div>



